{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@env": ["node_modules/react-native-dotenv"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["react-native"]
  },
  "include": ["src/**/*", "**/*.ts", "**/*.tsx"]
}
